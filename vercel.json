{
  "version": 2,
  "name": "haazir-attendance-system",
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "server/src/app_clean.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/src/app_clean.ts"
    },
    {
      "src": "/models/(.*)",
      "dest": "client/public/models/$1"
    },
    {
      "src": "/static/(.*)",
      "dest": "client/build/static/$1",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|svg|ico|json|woff|woff2|ttf|eot))",
      "dest": "client/build/$1"
    },
    {
      "src": "/(.*)",
      "dest": "client/build/index.html"
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "server/src/app_clean.ts"
    }
  ],
  "headers": [
    {
      "source": "/models/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
